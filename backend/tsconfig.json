
{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react-native",
    "baseUrl": ".",
    "paths": {
      "@components/*": ["src/components/*"],
      "@screens/*": ["screens/*"],
      "@services/*": ["src/services/*"]
    }
  },
  "files": [
    "src/server.ts",
    "src/routes.ts",
    "screens/HomeScreen.tsx",
    "src/components/HoroscopeCard.tsx",
    "src/components/SafetyModal.tsx",
    "src/services/distressDetection.ts"
  ]
}
